<html>
  <body>
    
    <div class="text-center bg-light">
    <br>
    <h1>Balance ton Gossip !</h1>
    <br>
    <%= form_tag url_for(action: 'create'), method: "post" do %>

      <%= label_tag 'Title' %>
      <%= text_field_tag 'title', @gossip.title,:placeholder=>'title' %>
      <br /> <br />

      <%= label_tag 'Body' %>
      <%= text_area_tag 'body', @gossip.content,:placeholder=>'Content' %>
      <br /> <br />

      <%= label_tag 'Author' %>
      <%= text_field_tag 'author', @gossip.user, :placeholder=>'first name' %>
      <br /> <br />

      <%= submit_tag "Create Post" %>

    <% end %>
    <br>
    <%if @fail %>

    <div class="alert alert-danger" role="alert">
       <p class="text-center"> Erreur ! </p>
    </div>
    </div>
    <%end%>

    <br>
    <br>
    <br>
    <br>
  
    <!-- ... -->
  </body>
</html>