<html>
  <body>
  
    <br>
    <div class="text-center">
    <h1>Connexion</h1>
    <br>
    <%= form_tag url_for(action: 'create'), method: "post" do %>

       <%= label_tag 'Email :' %>
      <%= text_area_tag 'email', user = User.find_by(email: params[:email]),:placeholder=>'email' %>
      <br /> <br />

      <%= label_tag 'Mot de passe :' %>
      <%= text_field_tag 'password' , @password_digest,:placeholder=>'mot de passe' %>
       <br /> <br />

      <%= submit_tag "Envoyer" %>

    <% end %>
    </div>
    <br>
    <%if @failure %>

    <div class="alert alert-danger" role="alert">
       <p class="text-center"> Erreur, mauvaise combinaison ! </p>
    </div>
    
    <%end%>
