<html>
  <body>
  
    <br>
    <div class="text-center">
    <h1>Créer un compte</h1>
    <br>
    <%= form_tag url_for(action: 'create'), method: "post" do %>

      <%= label_tag 'Prénom :' %>
      <%= text_field_tag 'first_name', @user.first_name,:placeholder=>'prénom' %>
      <br /> <br />

      <%= label_tag 'Nom :' %>
      <%= text_area_tag 'last_name', @user.last_name,:placeholder=>'nom' %>
      <br /> <br />

       <%= label_tag 'Ville de residence :' %>
      <%= text_field_tag 'Ville' , @user.city,:placeholder=>'ville' %>
       <br /> <br />

       <%= label_tag 'Email :' %>
      <%= text_area_tag 'email', @user.email,:placeholder=>'email' %>
      <br /> <br />

      <%= label_tag 'Mot de passe :' %>
      <%= text_field_tag 'password' , @password_digest,:placeholder=>'mot de passe' %>
       <br /> <br />

      <%= submit_tag "Envoyer" %>

    <% end %>
    <br>
    <%if @disconect %>

    <div class="alert alert-danger" role="alert">
       <p class="text-center"> Votre profil est déconnecté ! </p>
    </div>
    </div>
    <%end%>

    <!-- ... -->
  </body>
</html>